{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",                
    "lib": ["ES2018"],
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "strict": true,
    "esModuleInterop": true,             
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ],
  "exclude": [
    "./test"
  ]
}
